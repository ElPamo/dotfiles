# Credit: https://addy-dclxvi.github.io/post/dunst/

[global]
	monitor = 0
	follow = mouse
	geometry = "384-0+32"
	indicate_hidden = yes
	shrink = yes
	gap_size = 16
	padding = 16
	horizontal_padding = 16
	sort = no
	idle_threshold = 120
	font = "IBM Plex Text" 12
	line_height = 6
	markup = full
	format = <i>%s</i>\n\n%b
	alignment = left
	show_age_threshold = 60
	word_wrap = yes
	ignore_newline = no
	stack_duplicates = false
	hide_duplicate_count = yes
	show_indicators = no
	icon_position = on
	sticky_history = yes
	history_length = 20
	browser = /usr/bin/firefox -new-tab
	always_run_script = true
	text_icon_padding = 8
	title = Dunst
	class = Dunst
	max_icon_size = 32

[shortcuts]
	close = ctrl+space
	close_all = ctrl+shift+space
	history = ctrl+grave
	context = ctrl+shift+period

[urgency_low]
	timeout = 4
	background = "#0f62fe"
	foreground = "#ffffff"

[urgency_normal]
	timeout = 8
	background = "#0f62fe"
	foreground = "#ffffff"

[urgency_critical]
	timeout = 0
	background = "#da1e28"
	foreground = "#ffffff"
